<Window x:Class="Vocabulary.WindowLanguages"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Vocabulary++ Language Definitions" Height="174.667" Width="300" WindowStyle="ToolWindow" Activated="Window_Activated" WindowStartupLocation="CenterScreen" FontFamily="Segoe UI">
    <Grid>
        <TextBox x:Name="tbLanguage1" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Margin="89,46,10,0"/>
        <TextBox x:Name="tbLanguage2" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Margin="89,72,10,0"/>
        <Label x:Name="lblLanguage1" Content="Language 1:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,41,0,0"/>
        <Label x:Name="lblLanguage2" Content="Language 2:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,69,0,0"/>
        <Label x:Name="lblDefineLanguages" Content="Please define which languages to use:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <Button x:Name="btnOk" Content="OK" Margin="207,0,10,11" IsDefault="True" Click="btnOk_Click" Height="20" VerticalAlignment="Bottom"/>
        <Button x:Name="btnCancel" Content="Cancel" HorizontalAlignment="Left" Width="75" Margin="10,0,0,10" IsCancel="True" Height="20" VerticalAlignment="Bottom"/>
    </Grid>
</Window>
