<Window x:Class="Vocabulary.WindowLanguages"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Vocabulary++ Language Definitions" Height="216.804" Width="429" ResizeMode="NoResize" Activated="Window_Activated" FontFamily="Segoe UI">
    <Grid>
        <TextBox VerticalContentAlignment="Center" x:Name="tbLanguage1" Height="28" TextWrapping="Wrap" VerticalAlignment="Top" Margin="132,48,10,0"/>
        <TextBox VerticalContentAlignment="Center" x:Name="tbLanguage2" Height="26" TextWrapping="Wrap" VerticalAlignment="Top" Margin="132,90,10,0"/>
        <Label x:Name="lblLanguage1" Content="Language to learn:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,48,0,0"/>
        <Label x:Name="lblLanguage2" Content="Reference language:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,90,0,0"/>
        <Label x:Name="lblDefineLanguages" Content="Please define the language to learn, as well as a reference language." HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <Button x:Name="btnOk" Content="OK" Margin="0,0,10,10" IsDefault="True" Click="btnOk_Click" Height="32" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="77"/>
        <Button x:Name="btnCancel" Content="Cancel" HorizontalAlignment="Left" Width="75" Margin="10,0,0,10" IsCancel="True" Height="32" VerticalAlignment="Bottom"/>
    </Grid>
</Window>
