<Window x:Class="Vocabulary.WindowAbout"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Height="164.662" Width="427" ResizeMode="NoResize" Loaded="HelpWindow_Loaded" Icon="Assets/img/favicon.ico" ShowInTaskbar="False" WindowStartupLocation="CenterOwner">
    <Grid Margin="0,0,0,0" KeyDown="HelpWindow_KeyDown" MouseDown="HelpWindow_MouseDown">
        <TextBlock x:Name="tbDescription" TextWrapping="WrapWithOverflow" Margin="10,10,10,0" Height="55" VerticalAlignment="Top" FontFamily="Segoe UI"/>
        <TextBlock x:Name="tbVersion" Margin="10,89,10,0" Height="15" VerticalAlignment="Top" FontFamily="Segoe UI"/>
        <TextBlock x:Name="tbCopyright" Margin="10,104,10,0" Height="23" VerticalAlignment="Top" FontFamily="Segoe UI"/>
        <Button Content="Rate App" x:Name="btnRate" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="89" Height="37" Click="BtnRate_Click"/>
        <Button Content="GitHub" x:Name="btnGithub" HorizontalAlignment="Right" Margin="0,0,10,52" VerticalAlignment="Bottom" Width="89" Height="37" Click="BtnGithub_Click"/>
    </Grid>
</Window>
